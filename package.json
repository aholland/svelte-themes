{
	"name": "svelte-themes",
	"version": "1.0.0",
	"description": "An abstraction for themes in your Svelte app - port of next-themes for Svelte",
	"type": "module",
	"keywords": [
		"svelte",
		"sveltekit",
		"themes",
		"dark-mode",
		"light-mode",
		"theme-switching",
		"next-themes"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pacocoursey/svelte-themes.git"
	},
	"homepage": "https://svelte-themes.vercel.app",
	"bugs": {
		"url": "https://github.com/pacocoursey/svelte-themes/issues"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0 || ^5.0.0"
	},
	"scripts": {
		"analyze": "source-map-explorer .svelte-kit/output/client/_app/immutable/chunks/*.js --html > bundle-analysis.html",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"build": "vite build",
		"package": "svelte-kit sync && svelte-package",
		"prepublishOnly": "npm run package",
		"dev": "vite dev --port=9090",
		"prepare": "svelte-kit sync || echo ''",
		"preview": "vite preview"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/kit": "^2.21.5",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@typescript-eslint/eslint-plugin": "^8.34.1",
		"@typescript-eslint/parser": "^8.34.1",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.2",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.12",
		"puppeteer": "^24.10.1",
		"svelte": "^5.34.3",
		"svelte-check": "^4.2.1",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"vite": "^6.3.5"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@parcel/watcher",
			"@sveltejs/kit",
			"esbuild",
			"svelte-preprocess"
		],
		"ignoredBuiltDependencies": [
			"puppeteer"
		]
	}
}
